<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.it342.sugarsafe.Insulin_Ratio">


    <TextView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10px"
        android:layout_marginTop="20px"
        android:drawableLeft="@drawable/arrow_back"
        android:foregroundGravity="left"
        android:gravity="left"
        android:text="@string/back"
        android:textColor="@color/TextColor"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="990px"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="@string/Weight"
        android:layout_marginTop="200px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Weight"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/calculate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shap_buttens"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:text="calculate"
        android:textSize="18dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="990px"
        android:layout_gravity="center"
        android:layout_height="wrap_content"

        android:layout_marginTop="100px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/doesOne"
            android:enabled="false"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_gravity="center"
            android:inputType="number"/>


    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/textDoesOne"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:textColor="@color/red"
        android:padding="5pt"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="990px"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/doestwo"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:visibility="gone"
            android:inputType="number"/>


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textDoesTwo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:padding="5pt"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />





</LinearLayout>